/*Calculadora Básica: Solicite ao usuário dois números e uma operação (por exemplo, +, -, *, /). Use if e else para executar a operação escolhida e exibir o resultado.*/

let numeroUm = Number (prompt ("Digite um número:"))
let numeroDois = Number (prompt ("Digite um outro número:"))
let operacao = prompt ("Digite um operador (+ - * /):")

if (operacao == '+') {
    console.log ("O resultado é:" , numeroUm + numeroDois)
}
else if (operacao == '-') {
    console.log ("O resultado é:" , numeroUm - numeroDois)
}
else if (operacao == '*') {
    console.log ("O resultado é:" , numeroUm * numeroDois)
}
else if (operacao == '/') {
    console.log ("O resultado é:" , numeroUm * numeroDois)
}
